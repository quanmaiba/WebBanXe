<div class="modal" id="addEditHangXe">
    <div class="modal-dialog">
        <div class="modal-content">


            <!-- Modal Header -->
            <form action="/" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Hãng Xe</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" class="form-control" id="HangXeId" name="HangXeId" />

                    <div class="row form-group">
                        <div class="col-md-4">
                            <label class="control-label">Tên Hãng Xe </label>
                        </div>
                        <div class="col-md-8 ">
                            <input type="text" required class="form-control" id="TenHangXe" name="TenHangXe" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-4">
                            <label class="control-label">Ảnh Được Chọn</label>
                        </div>
                        <div class="col-md-8">
                            <p id="hienAnh"> Chưa Có Ảnh</p>
                            @*<input type="file" onchange="encode();" class="form-control" id="IMG" name="onchange="encode();"" />*@
                            <img src="" id="Img" name="Img" style="width:50px;height:50px;"/>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-4">
                            <label class="control-label">Ảnh</label>
                        </div>
                        <div class="col-md-8 ">
                            @*<input type="file" onchange="encode();" class="form-control" id="IMG" name="onchange="encode();"" />*@
                            <input id="IMGFile" type="file" onchange="hangxe.encodeImageFileAsURL(this)" placeholder="Chọn ảnh bạn muốn sử dụng"/>
                        </div>
                    </div>



